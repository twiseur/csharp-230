@model List<LearningCenterBusiness.ClassModel>

@{
    ViewBag.Title = "Classes";
}

<h2>Classes</h2>

@if (Model.Count() > 0)
{
    <table style="width:80%" border=0 frame=void rules=rows bordercolor="#CCCCCC">
        <tr>
            <td><b>Name</b></td>
            <td><b>Description</b></td>
            <td><b>Price</b></td>
        </tr>
        @foreach (var Class in Model)
        {
            <tr>
                <td>@Class.ClassName</td>
                <td>@Class.ClassDescription</td>
                <td>@Class.ClassPrice</td>
            </tr>
        }
    </table>
}
else
{
    <h2>No Class.</h2>
}