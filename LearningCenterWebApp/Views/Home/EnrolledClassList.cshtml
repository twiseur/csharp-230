@model IEnumerable<LearningCenterWebApp.Models.Class>

@{
    ViewBag.Title = "My Classes";
}

<h2 style="color:lightskyblue">My Classes</h2>

@if (Model.Count() > 0)
{
    <table style="width:80%">
        <tr>
            <td>Class Name</td>
            <td>Description</td>
            <td>Price</td>
            <td>Number of Sessions</td>
        </tr>
        @foreach (var Class in Model)
        {
            <tr>
                <td>@Class.ClassName</td>
                <td>@Class.ClassDescription</td>
                <td>@Class.ClassPrice</td>
                <td>@Class.ClassSessions</td>
            </tr>
        }
    </table>
}
else
{
    <h2>No Class.</h2>
}
